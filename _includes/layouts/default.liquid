---
body_class: "post_template"
navigation_layout: "left-logo"
serif_title: false
serif_body: false
secondary_navigation: false
---

<!DOCTYPE html>
<html lang="{{ metadata.language }}">
  <head>

      {% # Document Settings %}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {% # Base Meta %}
    <title>{{ title | default: metadata.title }}</title>
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

      {% # Styles'n'Scripts %}
    <link
      rel="stylesheet"
      type="text/css"
      href="/css/main.css" />

    {% include "partials/head.liquid" %}

  </head>
  <body class="{{body_class}} is-head-{{ navigation_layout }}{% if serif_title %} has-serif-title{% endif %}{% if serif_body %} has-serif-body{% endif %}">
    <div class="site-wrapper">

      <header id="gh-head" class="gh-head gh-outer">
        <div class="gh-head-inner gh-inner">
          <div class="gh-head-brand">
            <div class="gh-head-brand-wrapper">
              <a class="gh-head-logo" href="{{ metadata.url }}">
                {% if metadata.logo %}
                  <img src="{{ metadata.logo }}" alt="{{ metadata.title }}">
                {% else %}
                  {{ metadata.title }}
                {% endif %}
              </a>
            </div>
            {% comment %} <button
                            class="gh-search gh-icon-btn"
                            aria-label="Search this site"
                          data-ghost-search>{% include "icons/search.liquid" %}</button> {% endcomment %}
            <button class="gh-burger"></button>
          </div>

          <nav class="gh-head-menu">
            {%- include "partials/navigation.liquid" %}
            {% comment %} {%- if navigation_layout == "stacked" %}
              <button
                class="gh-search gh-icon-btn"
                aria-label="Search this site"
                data-ghost-search>{% include "icons/search.liquid" %}</button>
            {%- endif %} {% endcomment %}
          </nav>

          <div class="gh-head-actions">
            {% comment %} {%- if not navigation_layout == "stacked" %}
              <button
                class="gh-search gh-icon-btn"
                aria-label="Search this site"
                data-ghost-search>{% include "icons/search.liquid" %}</button>
            {%- endif %} {% endcomment %}
          </div>
        </div>
      </header>

      <main id="site-main" class="site-main">
        {{ content }}
      </main>

      <footer class="gh-foot{% if not metadata.secondary_navigation %} no-menu{% endif %} gh-outer">
        <div class="gh-foot-inner gh-inner">
          <div class="gh-copyright">
            {{ metadata.copyright }}
          </div>
          {% comment %} {%- if metadata.secondary_navigation %}
                                                                                                                                                                                                                        <nav class="gh-foot-menu">
                                                                                                                                                                                                                          {# {{ navigation type="secondary" }} #}
                                                                                                                                                                                                                        </nav>
                                                                                                                                                                                    {%- endif %} {% endcomment %}
          <div class="gh-powered-by">
            <a
            href="https://www.11ty.dev/"
            target="_blank"
            rel="noopener">Built with {{ eleventy.generator }}</a>
          </div>  
          <div class="gh-powered-by">
            <a
            href="https://github.com/TryGhost/London"
            target="_blank"
            rel="noopener">Style adapted from London</a>
          </div>  
        </div>
      </footer>

    </div>


    {%- include "partials/pswp.liquid" %}

    <script src="/js/main.min.js"></script>

    {{ ghost_foot }}

  </body>
</html>