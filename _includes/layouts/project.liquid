---
layout: layouts/default.liquid
post_class: "page-template"
show_title_and_feature_image: true
collection: "post"
tags: "project"
feature_image_alt: title
---
<article class="post-content {{post_class}}">

  {%- if show_title_and_feature_image %}
    <header class="post-content-header gh-canvas">
      <h1 class="post-content-title">{{ title }}</h1>
      {% comment %} {% include "partials/feature-image.liquid" %} {% endcomment %}
    </header>
  {% endif %}


  <div class="post-content-body gh-content gh-canvas">
    {{ content }}
  </div>
</article>

<div class="post-feed gh-feed gh-content">
  {%- for post in collections[collection] %}
    {%- include "partials/post-card.liquid" %}
  {%- endfor %}
</div>